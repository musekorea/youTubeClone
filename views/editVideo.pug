extends layout/main

block content
  .form-container 
    form(action=routes.editVideo(video.id), method="post")
      input(type="text", placeholder="Title", name="title", value=video.title)
      textarea(name="description", placeholder=`${video.description}`)
      input(type="submit", value="Update Video")

      a.form-container-link.form-container-link-delete(href=routes.deleteVideo(video.id)) Delete Video
      
